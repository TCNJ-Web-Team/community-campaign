---
import { Image } from "astro:assets";
// import heroImage from "../assets/hero.jpg";
import CommunityLogoAnimation from "./CommunityLogoAnimation";
// import CommunityLogoAnimation from "./CommunityLogoAnimation";
interface Props {
  heading?: string;
  body?: string;
  buttonText?: string;
  buttonLink?: string;
}

const { heading, body, buttonLink, buttonText } = Astro.props;
---

<section class="intro">
  <!-- <CommunityLogoAnimation client:load /> -->
  <img src="/astro/images/hero-bg.jpg" id="hero-bg" alt="Background yellow" />
  <img src="/astro/images/hero.jpg" id="hero-image" alt="TCNJ Pavillion" />

  <div id="banner">
    <CommunityLogoAnimation client:load />
    <!-- <h2>{heading}</h2> -->
    <p>{body}</p>
    {
      buttonText && (
        <a class="button-link" href={buttonLink}>
          {buttonText}
        </a>
      )
    }
  </div>
</section>
